			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Cube"/>
			</children>
		</node>
		
		<node id="BFC5">
			<transforms>
				<scale x="5.0" y="0.3" z="3.0" />
				<translate x="0.0" y="11.7" z="0.0" />
			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Cube"/>
			</children>
		</node>

		<node id="Cube">
			<transforms>
			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Face1"/>
				<noderef id="Face2"/>
				<noderef id="Face3"/>
				<noderef id="Face4"/>
				<noderef id="Face5"/>
				<noderef id="Face6"/>

		</node>
		
		<node id="Face1">
			<transforms>
				<translate x="-0.5" y="-0.5" z="0.5" />
			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Rectangle" />
			</children>
		</node>
		
		<node id="Face2">
			<transforms>
				<translate x="0.5" y="-0.5" z="-0.5" />

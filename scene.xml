<lsf>
	<globals>
		<background r="0" g="0" b="0" a="0" />
		<polygon mode="fill" shading="gouraud" />
		<culling frontfaceorder="CCW" cullface="back" enabled="true" />
	</globals>
	
	
    <cameras initial="firstCamera" >
	<perspective id="secondCamera" near="12" far="13" angle="44">
    		<from x="11" y="14" z="99"/>
    		<to x="20" y="20" z="100"/>
    	</perspective>
        <ortho id="firstCamera" near="0" far="10" left="10" right="10" top="10" bottom="10" />

    </cameras>
    
     <lighting doublesided="true" local="true" enabled="true" >
       
        <ambient r="0.2" g="0.2" b="0.2" a="1.0" />

        <lights>
            <light id="Light1" enabled="true">
                <location x="4.0" y="6.0" z="1.0" />
                <ambient r="255" g="242" b="0" a="0.1" />
				<diffuse r="255" g="242" b="0" a="0.1" />
				<specular r="255" g="242" b="0" a="0.1" />

            </light>
			
			<light id="Light2" enabled="true">
				<location x="10.5" y="6.0" z="1.0" />
				<ambient r="255" g="242" b="0" a="0.1" />
				<diffuse r="255" g="242" b="0" a="0.1" />
				<specular r="255" g="242" b="0" a="0.1" />
				
			</light>
			
			<light id="Light3" enabled="false">
				<location x="10.5" y="6.0" z="11.0" />
				<ambient r="255" g="242" b="0" a="0.1" />
				<diffuse r="255" g="242" b="0" a="0.1" />
				<specular r="255" g="242" b="0" a="0.1" />
			</light>
			
			<light id="Light4" enabled="true">
				<location x="4.0" y="6.0" z="11.0" />
				<ambient r="255" g="242" b="0" a="0.1" />
				<diffuse r="255" g="242" b="0" a="0.1" />
				<specular r="255" g="242" b="0" a="0.1" />
			</light>

        </lights>

    </lighting>
    
    <appearances>
        
        <appearance id="TableMaterial" >
            <emissive r="0.0" g="0.0" b="0.0" a="1.0" />
            <ambient r="0.2" g="0.2" b="0.2" a="1.0" />
            <diffuse r="0.8" g="0.8" b="0.8" a="1.0" />
            <specular r="0.1" g="0.1" b="0.1" a="1.0" />
            <shininess value="12" />
			<texture file="./textures/board.png" />
        </appearance>

</appearances>

   
    <graph rootid="root">
		
		<node id="root">
			<transforms>
			</transforms>
			<appearanceref id="TableMaterial" />
			<children>
				<noderef id="BFC1"/>
				<noderef id="BFC2"/>
				<noderef id="BFC3"/>
				<noderef id="BFC4"/>
				<noderef id="BFC5"/>
			</children>
		</node>

		<node id="BFC1">
			<transforms>
				<scale x="0.3" y="3.5" z="0.3" />
				<translate x="7.83" y="0.5" z="4.5" />
			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Cube"/>
			</children>
		</node>
		
		<node id="BFC2">
			<transforms>
				<scale x="0.3" y="3.5" z="0.3" />
				<translate x="7.83" y="0.5" z="-4.5" />
			</transforms>
			<appearanceref id="inherit" />
			<children>
				<noderef id="Cube"/>
			</children>
		</node>
		
		<node id="BFC3">
			<transforms>
				<scale x="0.3" y="3.5" z="0.3" />
				<translate x="-7.83" y="0.5" z="4.5" />
			</transforms>
			<appearanceref id="inherit" />
			<children>
